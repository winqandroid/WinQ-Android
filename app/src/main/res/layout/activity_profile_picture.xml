<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/navigation_shape"
    android:gravity="center_vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/navigation_shape"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x60"
            android:src="@mipmap/icon_avatar" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/x40"
            android:fontFamily="@font/vagroun_q"
            android:includeFontPadding="false"
            android:letterSpacing="0.1"
            android:text="@string/PROFILE_PICTURE"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x14"
            android:layout_marginLeft="@dimen/x38"
            android:layout_marginRight="@dimen/x38"
            android:layout_marginTop="@dimen/x35"
            android:src="@mipmap/tab_checked" />


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x28"
            android:layout_marginTop="@dimen/x50"
            android:background="@color/white"
            android:minHeight="@dimen/x656"
            app:cardCornerRadius="@dimen/dp_10"
            app:cardElevation="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x656"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_picture"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/x90"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/img_camera"
                    android:transitionName="avater" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/x14"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x28"
            android:layout_marginTop="@dimen/x53"
            android:src="@mipmap/tab_checked" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x40"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginRight="@dimen/x28"
            android:layout_marginTop="@dimen/x53"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bt_skip"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_43"
                android:layout_weight="1"
                android:background="@drawable/cancal_button_bg"
                android:fontFamily="@font/vagroun_q"
                android:text="@string/skip"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/bt_save"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_43"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_weight="1"
                android:background="@drawable/comfirm_button_bg"
                android:fontFamily="@font/vagroun_q"
                android:text="@string/save_picture"
                android:textColor="@color/mainColor" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>